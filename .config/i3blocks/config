[gpu_status]
command=$HOME/.scripts/gpu_status.sh
interval=5

[cpu_temp]
command=sensors nct6798-isa-0290 | grep TSI0_TEMP | awk '{print "ó°»   " $2}'
interval=5

[ip]
command=hostname -i | awk '{ print "IP:" $1 }'
color=#91E78B
interval=10

[cpu_usage]
command=vmstat 1 2| tail -1 | awk '{print 100-$15}'
interval=2

[mem_usage]
command=free -h | grep Mem. | awk '{print $3"/"$2}'
interval=1

[swap_usage]
command=free -h | grep Swap | awk '{print $3"/"$2}'
interval=1

[time]
command=date "+%y-%m-%d %T"
interval=5
